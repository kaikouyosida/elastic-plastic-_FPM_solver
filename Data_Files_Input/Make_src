CC = g++
CFLAGS = -Ofast -lm -pipe

#run
run: all
	./Convert_Marc_into_subdomain.exe
	./Set_point_around_node.exe
	./Set_center_of_subdomain.exe
	./Set_face_of_subdomain.exe
	./Set_neighboring_point.exe
	./Set_support_domain.exe
	./Set_indirect_support.exe
	./Set_point_coordinate.exe
	./Set_boundary_condition.exe

#compile
all: Convert_Marc_into_subdomain.exe Set_boundary_condition.exe Set_center_of_subdomain.exe Set_face_of_subdomain.exe Set_indirect_support.exe Set_neighboring_point.exe Set_point_around_node.exe Set_point_coordinate.exe Set_support_domain.exe

Convert_Marc_into_subdomain.exe: Convert_Marc_into_subdomain.c
	$(CC) -o Convert_Marc_into_subdomain.exe Convert_Marc_into_subdomain.c $(CFLAGS)

Set_boundary_condition.exe: Set_boundary_condition.c
	$(CC) -o Set_boundary_condition.exe Set_boundary_condition.c $(CFLAGS)

Set_center_of_subdomain.exe: Set_center_of_subdomain.c
	$(CC) -o Set_center_of_subdomain.exe Set_center_of_subdomain.c $(CFLAGS)

Set_face_of_subdomain.exe: Set_face_of_subdomain.c
	$(CC) -o Set_face_of_subdomain.exe Set_face_of_subdomain.c $(CFLAGS)

Set_indirect_support.exe: Set_indirect_support.c
	$(CC) -o Set_indirect_support.exe Set_indirect_support.c $(CFLAGS)

Set_neighboring_point.exe: Set_neighboring_point.c
	$(CC) -o Set_neighboring_point.exe Set_neighboring_point.c $(CFLAGS)

Set_point_around_node.exe: Set_point_around_node.c
	$(CC) -o Set_point_around_node.exe Set_point_around_node.c $(CFLAGS)

Set_point_coordinate.exe: Set_point_coordinate.c
	$(CC) -o Set_point_coordinate.exe Set_point_coordinate.c $(CFLAGS)

Set_support_domain.exe: Set_support_domain.c
	$(CC) -o Set_support_domain.exe Set_support_domain.c $(CFLAGS)